<%= form_for [@month, @note] do |f| %>
  <% if @note.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@note.errors.count, "error") %>
     prohibited this note from being saved:</h2>
     <ul>
     <% @note.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :money %><br>
    <%= f.number_field :money %>
  </p>
  <%= f.submit %>
<% end %>